<style>
    div {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
  width: 50%;
  height: 50%;
  margin: auto;
  margin-top: 225px;
}
 input.Continut {
    width: 100%;
    height: 200px;
    text-align: start;
}

textarea {
  width: 100%;
  height: 150px;
  padding: 12px 20px;
  box-sizing: border-box;
  border: 2px solid #ccc;
  border-radius: 4px;
  background-color: #f8f8f8;
  resize: none;
}

input.Titlu {
    width: 100%;
    text-align: center;
}  
</style>

<%if(Mod=="Postare"){%>
    <div>
<form action="PostArticol" method="POST">
<input type="text" id="inputTitlu" name="NumeArticol" class="Titlu"><br>
<textarea type="text" id="inputContinutArticol" name="ContinutArticol"></textarea>
<button type="submit" id="buttonSubmitPostare">Aplica</button>
</form>
</div>
<%}%>

<%if(Mod=="Editare"){%>
    
    <div>
    <form action="EditArticol" method="POST">
    <input type="text" id="inputNume" name="NumeArticol" value=<%=Articol.Nume%> class="Titlu">
    <textarea  rows="10" cols="50" id="inputContinutArticol" name="ContinutArticol" ><%=Articol.Continut%></textarea>
    <input type="hidden" id="ArticolVechiId" name="NumeArticolVechi" value=<%=Articol.Nume%>>
    <button type="submit" id="buttonSubmitEditare">Aplica</button>
    </form>
</div>
    <%}%>